<div class="mx-auto md:w-2/3 w-full">
  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Welcome</h1>

  <p class="mt-4 text-lg">You are now logged in.</p>

  <%= button_to "Log out", session_path, method: :delete, class: "mt-6 rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
</div>
